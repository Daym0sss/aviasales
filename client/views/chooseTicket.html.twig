        <h2>Passengers information</h2>

        <div class="newsletter-subscribe">
            <div class="container">
                <form class="form-inline" method="post" action="http://localhost/kursach/server/user/registerForFlight" onsubmit="checkBookTicketsForm(event)">

                    {% set counter = 1 %}
                    <input type="hidden" name="trip_id" value="{{ flight.trip_id }}">
                    <input type="hidden" name="user_id" value="{{ user_id }}">
                    <input type="hidden" name="class" value="{{ class }}">
                    {% for passanger in passangers %}
                        {% if passanger.type == "default" %}
                            <h5 style="margin-left: -200px">Passanger adult</h5> <br><br>
                        {% else %}
                            <h5 style="margin-left: -200px">Passanger {{ passanger.type }}</h5> <br><br>
                        {% endif %}
                        <input type="hidden" name="passanger_type{{ counter }}" value="{{ passanger.type }}">

                        <div class="form-group" style="margin-left: 20px">
                            <input class="form-control" type="text" id="firstName{{ counter }}" name="firstName{{ counter }}" placeholder="Your first name" required>
                        </div>

                        <div class="form-group" style="margin-left: 20px">
                            <input class="form-control" type="text" id="secondName{{ counter }}" name="secondName{{ counter }}" placeholder="Your second name" required>
                        </div>

                        <div class="form-group" style="margin-left: 20px">
                            <input class="form-control" type="text" id="lastName{{ counter }}" name="lastName{{ counter }}" placeholder="Your last name" required>
                        </div>

                        <div class="form-group" style="margin-left: 20px">
                            <input class="form-control" type="text" id="passport_num{{ counter }}" name="passport_num{{ counter }}" placeholder="Your passport number" required>
                        </div>

                        <div class="form-group col-lg-6 align-items-start flex-column pt-lg-4" style="margin-top: -70px; margin-left: 970px">
                            <div class="form-check form-switch">
                                <input class="form-check-input align-self-center" type="checkbox" id="hasLuggage{{ counter }}" name="hasLuggage{{ counter }}">
                                <label class="form-check-label d-inline-flex align-self-center" for="directFlights">Add luggage(+ {{ flight.luggage_price }} BYN)</label>
                            </div>
                        </div>

                        {% set counter = counter + 1 %}
                        <br><br>
                    {% endfor %}
                    <input type="hidden" name="passangersCount" value="{{ counter }}">
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit" style="margin-left: -200px; margin-top: 20px">Book ticket</button>
                    </div>
                </form>
            </div>
        </div>



                    <th>{{ trip.business_place_price_default }} BYN <br> {{ trip.business_place_price_child }} BYN <br> {{ trip.business_place_price_baby }} BYN </th>
                    <th>{{ trip.aviaCompany_name }}</th>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <h2>No trips exist</h2>
    {% endif %}


